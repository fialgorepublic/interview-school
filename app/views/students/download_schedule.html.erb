<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Teacher</th>
      <th>Class Room</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.section.subject.name %></td>
        <td><%= teacher_full_name(schedule.section.teacher) %></td>
        <td><%= schedule.section.class_room.name%></td>
        <td><%= schedule.section.start_time.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= schedule.section.end_time.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= link_to 'Remove Section', student_schedule_path(@student, schedule), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>