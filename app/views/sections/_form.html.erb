<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time, required: true %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time, required: true %>
  </div>

  <div class="field">
    <%= form.label :teacher_id %>
    <%= form.select :teacher_id, Teacher.all.pluck(:first_name,:id),{prompt:'Select Teacher'}, required: true %>

  </div>

  <div class="field">
    <%= form.label :subject_id %>
    <%= form.select :subject_id, Subject.all.pluck(:name,:id),{prompt:'Select Subject'}, required: true%>

  </div>

  <div class="field">
    <%= form.label :class_room_id %>
    <%= form.select :class_room_id, ClassRoom.all.pluck(:name,:id),{prompt:'Select Class Room'}, required: true%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
